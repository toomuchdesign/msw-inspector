{
  "name": "msw-inspector",
  "version": "1.0.0",
  "description": "Inspect requests intercepted by MSW",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "clean": "rm -rf dist",
    "compile": "npm run clean && tsc -p tsconfig.build.json",
    "test": "jest ./src",
    "test:source": "npm run test:format && npm run test:ts && npm t -- --coverage",
    "test:ts": "tsc --noEmit",
    "test:format": "npm run prettier",
    "preversion": "npm run prepare",
    "version": "git add package.json",
    "postversion": "git push && git push --tags",
    "prepare": "npx simple-git-hooks && npm run test:source && npm run compile",
    "prettier": "prettier --check .",
    "prettier:fix": "prettier --write ."
  },
  "keywords": [
    "msw",
    "api",
    "mock",
    "mocking",
    "request",
    "assertion"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/toomuchdesign/msw-inspector.git"
  },
  "author": "Andrea Carraro <me@andreacarraro.it>",
  "license": "ISC",
  "devDependencies": {
    "@types/node": "^20.3.2",
    "@types/jest": "^29.5.2",
    "jest": "^29.5.0",
    "msw": "^1.0.0",
    "prettier": "^2.0.0",
    "simple-git-hooks": "^2.0.0",
    "ts-jest": "^29.1.0",
    "typescript": "^5.1.3"
  },
  "peerDependencies": {
    "msw": "^1.0.0"
  },
  "simple-git-hooks": {
    "pre-commit": "npm run test:source"
  },
  "jest": {
    "preset": "ts-jest/presets/js-with-ts",
    "testEnvironmentOptions": {
      "url": "http://localhost/"
    },
    "modulePathIgnorePatterns": [
      "__mocks__"
    ],
    "coverageReporters": [
      "text",
      "lcov"
    ],
    "setupFilesAfterEnv": [
      "<rootDir>/jest.setup.ts"
    ]
  },
  "engines": {
    "node": ">=v16.0.0"
  }
}
